# .env - Configuración por defecto
# Cambia estos valores según tu sistema

# Paths del sistema (CAMBIA ESTOS SEGÚN TU COMPUTADOR)
TADEO_ECAR_WS_PATH=/home/axioma/ros2/tadeo_ecar_ws
PROJECTS_PATH=/home/axioma/ros2
HOST_HOME=/home/axioma

# Docker configuration
IMAGE_NAME=ros2_humble_tadeo_ecar
CONTAINER_NAME=ros2_humble_tadeo_ecar
COMPOSE_PROJECT_NAME=tadeo_ecar_project

# Display configuration
DISPLAY=:0

# Puertos
ROS2_DDS_PORTS=7400-7500
GAZEBO_MASTER_PORT=11345
GAZEBO_TRANSPORT_PORT=11346
CODE_SERVER_PORT=8080
WEB_APP_PORT=8000

# ROS2 configuration (OPTIMIZADO para WSL ↔ Container)
ROS_DOMAIN_ID=42
RMW_IMPLEMENTATION=rmw_fastrtps_cpp
ROS_LOCALHOST_ONLY=0

# Gazebo configuration
IGN_GAZEBO_HEADLESS_RENDERING=1

# Recursos del sistema
MEMORY_LIMIT=8G
CPU_LIMIT=4.0
MEMORY_RESERVATION=2G
CPU_RESERVATION=1.0

# Usuario (normalmente 1000:1000 en Ubuntu/WSL)
USER_UID=1000
USER_GID=1000

# Audio (cambia según tu sistema)
PULSE_PATH=/run/user/1000/pulse
